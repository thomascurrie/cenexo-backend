# Cenexo Unified Platform Configuration
# Development environment configuration

# Core Configuration
ENVIRONMENT=development
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./cenexo_platform.db
TEST_DATABASE_URL=sqlite:///./cenexo_test.db

# Multi-tenant Configuration
DEFAULT_TENANT_DOMAIN=localhost
REQUIRE_TENANT_HEADER=false
TENANT_HEADER_NAME=X-Tenant-ID

# Security Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
RATE_LIMIT_PER_MINUTE=60
ADMIN_API_KEYS=dev-admin-key-change-in-production
USER_API_KEYS=dev-user-key-change-in-production
VIEWER_API_KEYS=dev-viewer-key-change-in-production

# Cenexo Scanner Configuration
CENEXO_SCANNER_ENABLED=true
CENEXO_SCANNER_VERSION=1.0.0
NMAP_TIMEOUT=300
NMAP_SCAN_INTENSITY=1
NMAP_MAX_TARGETS=10
# Use local Redis without authentication for development
REDIS_URL=redis://localhost:6379/0
SCAN_CACHE_TTL=3600
ALLOWED_SCAN_NETWORKS=127.0.0.1/32,10.0.0.0/8,192.168.0.0/16
SCAN_AUTHORIZATION_REQUIRED=false
SCAN_AUDIT_LOG_ENABLED=true
SCAN_MAX_CONCURRENT_SCANS=3
SCAN_MAX_DURATION=600

# Monitoring Configuration
PROMETHEUS_ENABLED=false
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
AUDIT_LOG_ENABLED=true

# Service Configuration
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_ENABLED=true

# Development/Debug Options
DB_ECHO=false
RATE_LIMITING_ENABLED=false
RATE_LIMIT_FAIL_CLOSED=false