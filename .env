# Environment Configuration
ENVIRONMENT=development

# Server Configuration
PORT=8000

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Security Scanner Configuration
NMAP_TIMEOUT=300
NMAP_SCAN_INTENSITY=1
NMAP_MAX_TARGETS=10
NMAP_RATE_LIMIT_PER_MINUTE=5
REDIS_URL=redis://:secure_password@localhost:6379/0
SCAN_CACHE_TTL=3600

# Security Controls
ALLOWED_SCAN_NETWORKS=192.168.0.0/16,10.0.0.0/8,127.0.0.1/32
SCAN_AUDIT_LOG_ENABLED=true
SCAN_AUTHORIZATION_REQUIRED=true
SCAN_MAX_CONCURRENT_SCANS=3
SCAN_MAX_DURATION=600

