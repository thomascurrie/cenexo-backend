# Cenexo Unified Platform Configuration
# Copy this file to .env and modify as needed

# Core Configuration
ENVIRONMENT=development
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Development: SQLite (no setup required)
# Production: PostgreSQL (requires database server)
DATABASE_URL=sqlite:///./cenexo_platform.db
TEST_DATABASE_URL=sqlite:///./cenexo_test.db

# Database Connection Pool (PostgreSQL only)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Multi-tenant Configuration
DEFAULT_TENANT_DOMAIN=localhost
REQUIRE_TENANT_HEADER=true
TENANT_HEADER_NAME=X-Tenant-ID

# Security Configuration
JWT_SECRET_KEY=replace-with-secure-random-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
RATE_LIMIT_PER_MINUTE=60
ADMIN_API_KEY=replace-with-secure-api-key

# Cenexo Scanner Configuration
CENEXO_SCANNER_ENABLED=true
CENEXO_SCANNER_VERSION=1.0.0
NMAP_TIMEOUT=300
NMAP_SCAN_INTENSITY=1
NMAP_MAX_TARGETS=10
REDIS_URL=redis://username:password@localhost:6379/0
SCAN_CACHE_TTL=3600
ALLOWED_SCAN_NETWORKS=127.0.0.1/32
SCAN_AUTHORIZATION_REQUIRED=true
SCAN_AUDIT_LOG_ENABLED=true
SCAN_MAX_CONCURRENT_SCANS=3
SCAN_MAX_DURATION=600

# Monitoring Configuration
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
AUDIT_LOG_ENABLED=true

# Service Configuration
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_ENABLED=true

# Development/Debug Options
DB_ECHO=false